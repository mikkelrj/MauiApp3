<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="CountEntry" Text="0"/>

            <Button
                x:Name="OpenListButton"
                Text="Open list" 
                Clicked="OnOpenListClicked"
                HorizontalOptions="Fill" />

            <Label x:Name="DurationLabel"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
